<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mindidea.feelfit"
    android:installLocation="preferExternal"
    android:versionCode="3"
    android:versionName="1.6.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mindidea.feelfit.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mindidea.feelfit.inputWeight" />
        <activity android:name="com.mindidea.feelfit.display" />
        <activity android:name="com.mindidea.feelfit.contact" />
        <activity android:name="com.mindidea.feelfit.graph_history" />
        <activity android:name="com.mindidea.feelfit.graph_myGraph" />
        <activity android:name="com.mindidea.feelfit.fbSharedDialog" />
        <activity android:name="com.mindidea.feelfit.comfirm_stop" />
        <activity android:name="com.mindidea.feelfit.NotificationReceiver" />
        <!-- <service android:enabled="true" android:name="MyService"></service> -->
        <activity android:name="com.mindidea.feelfit.TestConnect" />
        <activity android:name="com.mindidea.feelfit.TestPost" />
    </application>

</manifest>